// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id
  name          String
  score         Int      @default(0)
  roundScore    Int      @default(0)
  submittedWord String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  lobby         Lobby?   @relation(fields: [lobbyId], references: [id])
  lobbyId       String?

  @@index([id])
}

model Lobby {
  id                    String    @id
  players               User[]
  leaderId              String?
  victimId              String?
  currentPhrase         String?
  previousPhraseIndices Int[]
  gameStarted           Boolean   @default(false)
  gameOver              Boolean   @default(false)
  roundOver             Boolean   @default(false)
  roundCount            Int       @default(0)
  roundExpiration       DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([id])
}
